<div class="col-md-6 col-md-offset-3">
<div class="edit-food-form">

<h1>Edit  Food  </h1>

<%=simple_form_for @food, :html => {:multipart => true} do |f| %>

<%=f.select :category_id,@categories %>
<%=f.file_field :food_img %>

<%=f.input :name, label: "Food Name" %>
<%=f.input :description %>

<%=f.input :creator %>

<p>Add Another ingredient </p>

<%=f.fields_for :inputs do |builder| %>
<%=render 'input_fields',f:builder %>
<%end%>
<fieldset>

<%=link_to_add_fields "Add Ingredient",f, :inputs %>
<fieldset>


<%=f.input :directions %>

<%=f.button :submit, :class =>'btn-custom2' %>

<%end%>
</div>
</div>
