<div class="col-md-6 col-md-offset-3">
<div class="new-review-form">



<%=simple_form_for([@food,@food.reviews.build]) do |f| %>

	<div id="rating-form">
		<label>Rating</label>
	</div>

<%=f.input :comment %>

<%=f.button :submit,:class =>"btn-custom2" %>
<%end%>

<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>

