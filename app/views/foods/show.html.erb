
<div class="row">

<div class="col-md-4">
<%= image_tag @food.food_img.url(:food_show),class: "food-show" %>  


</div>

<div class="col-md-8">

<div class="food-info">

<h2 class="food-name"><%=@food.name.upcase %> </h2>
<h3 class="food-creator"><span> Created by </span><%=@food.creator %> </h3>
<h2 class="avg-rating"> Average Rating </h2>
<div class="average-review-rating" data-score=<%=@average_review%>></div>
<span class="numer=of-reviews"> Based on <%=@food.reviews.count%> reviews</span>
<p class="food-desc"><%=@food.description %> </p>


</div>
</div>
</div>

<div class="row">
<div class="col-md-4">
</div>
<div class="col-md-4 ">

<div class="food-info">
<h2> Ingredients</h2>
<p class="food-name"><% @food.inputs.each do |ingred| %></p>
<%=ingred.ingredients %>
<%end%>


</div>
</div>
<div class="col-md-4 ">

<div class="food-info">
<h2> Method</h2>

<p class="food-name"><%=@food.directions %></p>

</div>
</div>


</div>



<div class="row">

<div class="col-md-4">

<div class="reviews">
<h1> Reviews  </h1>
<%= render @food.reviews %>

<div>
<%= link_to "Add Review", new_food_review_path(@food) ,class: "btn-custom"%>
</div>
</div>

</div>


</div>

<div class="links btn-group">
<%=link_to "Back",root_path,class:"btn btn-custom" %>
<% if user_signed_in? %>
 <% if @food.user_id==current_user.id%>

<%= link_to "Edit", edit_food_path(@food),class:"btn btn-custom" %>

<%= link_to "Delete", food_path(@food),method: :delete, data: { confirm: "Are you sure?"},class:"btn btn-custom" %> 
<%end%>
<%end%>
</div>

